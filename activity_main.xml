<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:background="@drawable/gback"
    tools:context="me.nis.calculator.MainActivity" >

    <TextView
        android:id="@+id/tVinput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40sp"
        android:text="@string/input"
        android:textColor="#f54"
        android:textSize="50sp" />

    <Button
        android:id="@+id/b5"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:layout_alignBaseline="@+id/b4"
        android:layout_alignBottom="@+id/b4"
        android:layout_alignLeft="@+id/b2"
        android:text="5"
        android:textSize="25sp" />

    <Button
        android:id="@+id/b8"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:layout_alignBaseline="@+id/b7"
        android:layout_alignBottom="@+id/b7"
        android:layout_alignLeft="@+id/b5"
        android:text="8"
        android:textSize="25sp" />

    <Button
        android:id="@+id/b7"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:layout_alignLeft="@+id/b4"
        android:layout_below="@+id/b4"
        android:text="7"
        android:textSize="25sp" />

    <Button
        android:id="@+id/b2"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:layout_below="@+id/tVinput"
        android:layout_toRightOf="@+id/b1"
        android:text="2"
        android:textSize="25sp" />

    <Button
        android:id="@+id/b1"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:layout_alignBaseline="@+id/b2"
        android:layout_alignBottom="@+id/b2"
        android:layout_alignParentLeft="true"
        android:text="1"
        android:textSize="25sp" />

    <Button
        android:id="@+id/b4"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:layout_alignLeft="@+id/b1"
        android:layout_below="@+id/b1"
        android:text="4"
        android:textSize="25sp" />

    <Button
        android:id="@+id/b3"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tVinput"
        android:text="3"
        android:textSize="25sp" />

    <Button
        android:id="@+id/b6"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:layout_above="@+id/b8"
        android:layout_alignParentRight="true"
        android:text="6"
        android:textSize="25sp" />

    <Button
        android:id="@+id/b9"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:layout_above="@+id/b0"
        android:layout_alignParentRight="true"
        android:text="9"
        android:textSize="25sp" />

    <Button
        android:id="@+id/bclr"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:layout_alignBaseline="@+id/b0"
        android:layout_alignBottom="@+id/b0"
        android:layout_alignParentRight="true"
        android:text="clr"
        android:textColor="#f00"
        android:textSize="25sp" />

    <Button
        android:id="@+id/bdec"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:layout_alignBaseline="@+id/b0"
        android:layout_alignBottom="@+id/b0"
        android:layout_alignParentLeft="true"
        android:text="."
        android:textSize="25sp" />

    <Button
        android:id="@+id/b0"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:layout_alignLeft="@+id/b8"
        android:layout_below="@+id/b8"
        android:text="0"
        android:textColor="#ff0"
        android:textSize="25sp" />

    <Button
        android:id="@+id/badd"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_alignLeft="@+id/bdec"
        android:layout_below="@+id/bdec"
        android:text="+"
        android:textSize="40sp" />

    <Button
        android:id="@+id/bmul"
        android:layout_width="100sp"
        android:layout_height="60sp"
        android:layout_alignBaseline="@+id/bsub"
        android:layout_alignBottom="@+id/bsub"
        android:layout_alignLeft="@+id/bclr"
        android:text="*"
        android:textSize="40sp" />

    <Button
        android:id="@+id/bdiv"
        android:layout_width="100sp"
        android:layout_height="60sp"
        android:layout_alignLeft="@+id/badd"
        android:layout_alignParentBottom="true"
        android:text="/"
        android:textSize="30sp" />

    <Button
        android:id="@+id/bdel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tVinput"
        android:layout_alignRight="@+id/b3"
        android:text="del"
        android:textColor="#f00"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tVme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/me"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#A9C703" />

    <Button
        android:id="@+id/beql"
        android:layout_width="210sp"
        android:layout_height="100sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="="
        android:textColor="#F71919"
        android:textSize="50sp" />

    <Button
        android:id="@+id/bsub"
        android:layout_width="100sp"
        android:layout_height="60sp"
        android:layout_above="@+id/beql"
        android:layout_toRightOf="@+id/badd"
        android:text="-"
        android:textSize="40sp" />

</RelativeLayout>

